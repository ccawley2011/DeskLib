CC		=	cc
LINK		=	Link

CCFlags		=	-fahi -c $(CCExtra) -depend !Depend -throwback -I,C:
LinkFlags	=	-aif $(LinkExtra)

Libraries	=					\
			DeskLib:o.Debug.pipetype	\
			DeskLib:o.Debug.Signal		\
			DeskLib:o.DeskLib		\
			C:o.stubs			\


Target		=	$(TargetPath)!RunImage

ObjectFiles	=					\
			o.TestApp			\




# Don't alter anything below this...


VPATH = @ @.^

.SUFFIXES:	.o .c

$(Target):	$(ObjectFiles) $(Libraries)
	$(LINK) $(LinkFlags) -o $@ $(ObjectFiles) $(Libraries)

.c.o:
	$(CC) $(ccFlags) -o $@ $<



